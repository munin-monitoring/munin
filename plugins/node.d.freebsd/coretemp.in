# This plugin's functionality has been replaced by the dev_cpu_ plugin.
#%# family=legacy

# Munin plugin for CPU temperature on CPUs supported by FreeBSD's
# coretemp driver (includes all Intel Core and Core 2 CPUs)

die() {
	echo "$@" 1>&2
	exit 1
}

cpus() {
	sysctl -N dev.cpu |
	awk -F. '$4 == "temperature" { print $3 }'
}

reqcpus() {
	if [ -z "$cpus" ] ; then
		die "No supported CPUs"
	fi
}

autoconf() {
	if [ -n "$cpus" ] ; then
		echo "yes"
	else
		echo "no"
	fi
}

config() {
	reqcpus
	echo "graph_title CPU Core Temperature"
	echo -n "graph_order"
	for cpu in $cpus ; do
		echo -n " CPU$cpu"
	done
	echo ""
	echo "graph_category sensors"
	echo "graph_vlabel Core temperature in °C"
	echo "graph_scale no"
	for cpu in $cpus ; do
		echo "CPU$cpu.label CPU $cpu"
	done
}

get() {
	reqcpus
	for cpu in $cpus ; do
		echo -n "CPU$cpu.value "
		sysctl -n dev.cpu.$cpu.temperature | tr -d C
	done
}

self=$(basename $0)
cpus=$(cpus)

case "$*" in
autoconf)
	autoconf
	;;
config)
	config
        ;;
"")
	get
	;;
*)
	die "usage: $self [autoconf|config]"
	;;
esac
