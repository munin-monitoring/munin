#!@@GOODSH@@
# -*- sh -*-

: << =cut

=head1 NAME

cpu - Plugin to monitor CPU usage

=head1 CONFIGURATION

=over 4

=item df

Path to df executable (GNU df makes life easier) (Default: "/usr/bin/df")

=item warning

Warning percentage (Default 92)

=item critical

Critical percentage (Default: 98)

=back

=head1 AUTHOR

Unknown author

=head1 LICENSE

Unknown license

=head1 MAGIC MARKERS

 #%# family=auto
 #%# capabilities=autoconf

=cut

. $MUNIN_LIBDIR/plugins/plugin.sh

# Why does df_inode and df on solaris use different df versions?
DF=${df:-/usr/sbin/df}
TAIL=/usr/bin/tail

if [ "$1" = 'autoconf' ]; then
    echo yes
    exit 0
fi

if [ "$1" = "config" ]; then

        echo 'graph_title Filesystem usage (in %)'
        echo 'graph_args --upper-limit 100'
	echo 'graph_category disk'
	echo 'graph_scale no'

	# Using the mount point as name is silly as / becomes '' after
	# the needed substitutions.  So in this incarnation we use the
	# device name.  Since the plugin already changed names this
	# should be ok.

        $DF -k -l | $TAIL +2 | while read dev size used avail pct mnt; do
                name=$(clean_fieldname $dev)
                echo "$name.label $mnt"
		print_warning "$name"
		print_critical "$name"
        done
        exit 0
fi

$DF -k -l | $TAIL +2 | while read dev size used avail pct mnt; do
        name=$(clean_fieldname $dev)
        echo "$name.value $pct" | cut -f1 -d% 
done
